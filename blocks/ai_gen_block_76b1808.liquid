{% comment %}
  Best Seller Badge Block - Simplified Version
  Displays on top of product gallery image
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bestseller-badge-{{ ai_gen_id }} {
    position: absolute;
    z-index: 10;
    pointer-events: none;
  }

  .ai-bestseller-badge-{{ ai_gen_id }}--top-left {
    top: {{ block.settings.badge_offset }}px;
    left: {{ block.settings.badge_offset }}px;
  }

  .ai-bestseller-badge-{{ ai_gen_id }}--top-right {
    top: {{ block.settings.badge_offset }}px;
    right: {{ block.settings.badge_offset }}px;
  }

  .ai-bestseller-badge-{{ ai_gen_id }}--bottom-left {
    bottom: {{ block.settings.badge_offset }}px;
    left: {{ block.settings.badge_offset }}px;
  }

  .ai-bestseller-badge-{{ ai_gen_id }}--bottom-right {
    bottom: {{ block.settings.badge_offset }}px;
    right: {{ block.settings.badge_offset }}px;
  }

  .ai-bestseller-badge-content-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.badge_padding_vertical }}px {{ block.settings.badge_padding_horizontal }}px;
    background-color: {{ block.settings.badge_background_color }};
    color: {{ block.settings.badge_text_color }};
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: {{ block.settings.badge_font_weight }};
    letter-spacing: 0.5px;
    white-space: nowrap;
    border: {{ block.settings.badge_border_width }}px solid {{ block.settings.badge_border_color }};
  }

  {% if block.settings.badge_text_transform == 'uppercase' %}
    .ai-bestseller-badge-content-{{ ai_gen_id }} {
      text-transform: uppercase;
    }
  {% endif %}

  {% if block.settings.badge_shadow_opacity > 0 %}
    {% assign shadow_opacity_decimal = block.settings.badge_shadow_opacity | divided_by: 100.0 %}
    .ai-bestseller-badge-content-{{ ai_gen_id }} {
      box-shadow: 0 2px 4px rgba(0, 0, 0, {{ shadow_opacity_decimal }});
    }
  {% endif %}

  /* Make sure parent container has relative positioning */
  .product__media,
  .product__media-wrapper,
  .product-single__media,
  .product__media-item:first-child {
    position: relative !important;
  }

  @media screen and (max-width: 749px) {
    .ai-bestseller-badge-{{ ai_gen_id }}--top-left {
      top: {{ block.settings.badge_offset | times: 0.8 }}px;
      left: {{ block.settings.badge_offset | times: 0.8 }}px;
    }

    .ai-bestseller-badge-{{ ai_gen_id }}--top-right {
      top: {{ block.settings.badge_offset | times: 0.8 }}px;
      right: {{ block.settings.badge_offset | times: 0.8 }}px;
    }

    .ai-bestseller-badge-{{ ai_gen_id }}--bottom-left {
      bottom: {{ block.settings.badge_offset | times: 0.8 }}px;
      left: {{ block.settings.badge_offset | times: 0.8 }}px;
    }

    .ai-bestseller-badge-{{ ai_gen_id }}--bottom-right {
      bottom: {{ block.settings.badge_offset | times: 0.8 }}px;
      right: {{ block.settings.badge_offset | times: 0.8 }}px;
    }

    .ai-bestseller-badge-content-{{ ai_gen_id }} {
      font-size: {{ block.settings.badge_font_size | times: 0.9 }}px;
      padding: {{ block.settings.badge_padding_vertical | times: 0.8 }}px {{ block.settings.badge_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

{% if block.settings.show_badge %}
  <div class="ai-bestseller-badge-{{ ai_gen_id }} ai-bestseller-badge-{{ ai_gen_id }}--{{ block.settings.badge_position }}" {{ block.shopify_attributes }}>
    <div class="ai-bestseller-badge-content-{{ ai_gen_id }}">
      {{ block.settings.badge_text }}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Best seller badge",
  "tag": "section",
  "class": "bestseller-badge-section",
  "settings": [
    {
      "type": "header",
      "content": "Badge visibility"
    },
    {
      "type": "checkbox",
      "id": "show_badge",
      "label": "Show badge",
      "default": true
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Best Seller"
    },
    {
      "type": "header",
      "content": "Badge position"
    },
    {
      "type": "select",
      "id": "badge_position",
      "label": "Position",
      "options": [
        {
          "value": "top-left",
          "label": "Top left"
        },
        {
          "value": "top-right",
          "label": "Top right"
        },
        {
          "value": "bottom-left",
          "label": "Bottom left"
        },
        {
          "value": "bottom-right",
          "label": "Bottom right"
        }
      ],
      "default": "top-left"
    },
    {
      "type": "range",
      "id": "badge_offset",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Distance from edge",
      "default": 12
    },
    {
      "type": "header",
      "content": "Badge style"
    },
    {
      "type": "color",
      "id": "badge_background_color",
      "label": "Background color",
      "default": "#e3f2e6"
    },
    {
      "type": "color",
      "id": "badge_text_color",
      "label": "Text color",
      "default": "#151515"
    },
    {
      "type": "range",
      "id": "badge_border_radius",
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "px",
      "label": "Border radius",
      "default": 15
    },
    {
      "type": "range",
      "id": "badge_padding_horizontal",
      "min": 8,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Horizontal padding",
      "default": 12
    },
    {
      "type": "range",
      "id": "badge_padding_vertical",
      "min": 4,
      "max": 16,
      "step": 1,
      "unit": "px",
      "label": "Vertical padding",
      "default": 6
    },
    {
      "type": "header",
      "content": "Badge border"
    },
    {
      "type": "range",
      "id": "badge_border_width",
      "min": 0,
      "max": 4,
      "step": 1,
      "unit": "px",
      "label": "Border width",
      "default": 0
    },
    {
      "type": "color",
      "id": "badge_border_color",
      "label": "Border color",
      "default": "#e7e7e7"
    },
    {
      "type": "header",
      "content": "Badge typography"
    },
    {
      "type": "range",
      "id": "badge_font_size",
      "min": 10,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 12
    },
    {
      "type": "select",
      "id": "badge_font_weight",
      "label": "Font weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "600"
    },
    {
      "type": "select",
      "id": "badge_text_transform",
      "label": "Text case",
      "options": [
        {
          "value": "none",
          "label": "Normal"
        },
        {
          "value": "uppercase",
          "label": "All caps"
        }
      ],
      "default": "uppercase"
    },
    {
      "type": "header",
      "content": "Badge shadow"
    },
    {
      "type": "range",
      "id": "badge_shadow_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Shadow opacity",
      "default": 15
    }
  ],
  "presets": [
    {
      "name": "Best seller badge"
    }
  ]
}
{% endschema %}